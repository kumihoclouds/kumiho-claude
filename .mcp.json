{
  "mcpServers": {
    "kumiho-memory": {
      "command": "python",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/scripts/run_kumiho_mcp.py"
      ],
      "env": {
        "KUMIHO_AUTH_TOKEN": "${KUMIHO_AUTH_TOKEN:-}",
        "KUMIHO_CONTROL_PLANE_URL": "${KUMIHO_CONTROL_PLANE_URL:-https://control.kumiho.cloud}",
        "KUMIHO_MCP_LOG_LEVEL": "${KUMIHO_MCP_LOG_LEVEL:-INFO}",
        "KUMIHO_COWORK_PACKAGE_SPEC": "${KUMIHO_COWORK_PACKAGE_SPEC:-kumiho[mcp]>=0.9.4 kumiho-memory[all]>=0.1.1}",
        "KUMIHO_COWORK_DISABLE_LLM_FALLBACK": "${KUMIHO_COWORK_DISABLE_LLM_FALLBACK:-}",
        "KUMIHO_COWORK_REGION_DOMAIN_SUFFIX": "${KUMIHO_COWORK_REGION_DOMAIN_SUFFIX:-kumiho.cloud}"
      }
    }
  }
}
