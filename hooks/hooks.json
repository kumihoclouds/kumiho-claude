{
  "description": "Kumiho memory plugin hooks â€” session bootstrap and auto-approval",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/scripts/session-bootstrap.py\"",
            "timeout": 5,
            "statusMessage": "Bootstrapping Kumiho memory..."
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "mcp__.*kumiho-memory.*__kumiho_.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto-approve-memory.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
